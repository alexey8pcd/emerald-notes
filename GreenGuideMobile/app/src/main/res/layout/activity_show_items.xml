<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.alexey_ovcharov.greenguide.mobile.activities.ShowItemsActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="295dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">


        <TextView
            android:id="@+id/aShowItem_tvTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:gravity="center_vertical"
            android:text="Объекты в категории"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.03" />

        <Button
            android:id="@+id/aShowItem_bAdd"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.14"
            android:background="@color/app_color"
            android:text="Добавить объект..." />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.03" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.16"
                android:gravity="center_vertical"
                android:text="Изображение"
                android:textAlignment="center"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_weight="0.16"
                android:text="Название"
                android:textAlignment="center"
                android:textSize="10sp" />

            <Space
                android:layout_width="2dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_weight="0.16"
                android:text="Описание"
                android:textAlignment="center"
                android:textSize="10sp" />


            <Space
                android:layout_width="2dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_weight="0.16"
                android:text="Страна-производитель"
                android:textAlignment="center"
                android:textSize="10sp" />

            <Space
                android:layout_width="2dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_weight="0.16"
                android:text="Время разложения в природе"
                android:textAlignment="center"
                android:textSize="10sp" />

            <Space
                android:layout_width="2dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_weight="0.16"
                android:text="Опасность для окружающей среды"
                android:textAlignment="center"
                android:textSize="10sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.03" />

        <ListView
            android:id="@+id/aShowItems_lvItems"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
